#pragma once
#include <vector>
#include <string>
#include "Components.class"

class Thing { // нечто находящееся в клетке (предмет, враг, герой и тд)
public:
    unsigned long id;
    std::string symbol;
    int primary; // приоритет отображения (1-наивысший)
    std::vector<std::string> tags; // "теги" объекта (поднимаемый, непроходимый, исключающий и тд)
    std::vector<Component*> components; // отвечают за поведение объекта

    Thing(unsigned long nid, std::string type){
        id = nid;

        symbol = "0";
        if(type=="bedrock"){
            symbol=" ";
            primary = 1;
            tags.push_back("impassable");
        }
        if(type=="corridor"){
            symbol="#";
        }
        if(type=="floor"){
            symbol=".";
            primary = 4;
        }
        if(type=="door"){
            symbol="+";
        }
        if(type=="h_wall"){
            symbol="-";
            primary = 4;
        }
        if(type=="v_wall"){
            symbol="|";
            primary = 4;
        }
        if(type=="player"){
            symbol="@";
            primary = 2;
            //components.push_back(new Tag());
        }
    }
};
